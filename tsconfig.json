{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "module": "esnext",
    "outDir": "dist/esm",
    "declarationDir": "dist/types",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "transform": "@ovos-media/ts-transform-paths",
        "exclude": ["*"]
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": "src/index.ts",
    "out": "docs",
    "readme": "README.md"
  }
}
